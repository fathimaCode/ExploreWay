<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ProfileFragment">




    <androidx.cardview.widget.CardView
        android:id="@+id/profileCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/main"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/image_roundercorner"
                android:scaleType="fitCenter"
                android:src="@drawable/userprofile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile Fragment"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country: "
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:backgroundTint="@color/blue"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/favourite"
                    android:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Favourite Trip" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:backgroundTint="@color/blue"
            android:padding="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tint="#FFFFFF"
                    android:src="@drawable/baseline_search_24" />

                <TextView
                    android:id="@+id/textView8"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Search" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/textView9"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"

        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search from lowermainland" />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- Repeat the following block for each image -->
            <RelativeLayout
                android:layout_width="150dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="2dp"
                app:cardElevation="4dp"
                android:layout_height="match_parent">

                <!-- Image -->
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/westminster"/>

                <!-- Text Overlay -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:padding="8dp"
                    android:text="New westminster"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>
            <!-- Repeat block ends here -->
            <RelativeLayout
                android:layout_width="150dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="2dp"
                app:cardElevation="4dp"
                android:layout_height="match_parent">

                <!-- Image -->
                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/vancover"/>

                <!-- Text Overlay -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:padding="8dp"
                    android:text="vancouver"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="150dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="2dp"
                app:cardElevation="4dp"
                android:layout_height="match_parent">

                <!-- Image -->
                <ImageView
                    android:id="@+id/image14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/westminster"/>

                <!-- Text Overlay -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:padding="8dp"
                    android:text="New westminster"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="150dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="2dp"
                app:cardElevation="4dp"
                android:layout_height="match_parent">

                <!-- Image -->
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/burnaby"/>

                <!-- Text Overlay -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"

                    android:padding="8dp"
                    android:text="burnaby"
                    android:textColor="@android:color/white"/>

            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/searchRoute"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"

        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search your route" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:elevation="5dp"
        app:cardCornerRadius="8dp"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/map" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
android:padding="10dp"
            android:textSize="20dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="120dp"
            android:text="View Location"
            android:textColor="@android:color/black" />

    </androidx.cardview.widget.CardView>
</LinearLayout>
